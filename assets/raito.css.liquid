/* スライドショーセクション */
/* external css: flickity.css */

* { box-sizing: border-box; }

body { font-family: sans-serif; }

.carousel {
  margin-top:25px;
}

.carousel-cell {
  width: 100%;
  height: auto;
  margin-right: 10px;
  border-radius: 5px;
  counter-increment: carousel-cell;
  display: inline-block;
  text-align: center;
}

.carousel-cell.is-selected {
  background: #ED2;
}


