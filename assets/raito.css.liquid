.box-row {
  display: flex;
  flex-wrap: wrap;
  padding-right:3%;
  padding-left:3%;
  justify-content: center;
}
.box-item {
  padding: 5px;
  margin:1%;
  width: 45%;
  background-color:#004c3d;
  border-radius:10px 10px 10px 10px;
  color:white;
}
.box-item img{
  border-radius:10px 10px 10px 10px;
}
.box-row img {
	width: 100%;
}
@media not all and (min-width: 768px) {
  .item {
    width: 100%;
  }
}

